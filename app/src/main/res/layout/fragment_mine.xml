<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:elk="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:ignore="ResAuto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!--用户信息-->
        <RelativeLayout
            android:id="@+id/rl_mine_user_info"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <!--未登录信息显示-->
            <RelativeLayout
                android:id="@+id/rl_user_info_not_login"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/tv_mine_login_or_regist"
                    android:textSize="18sp"
                    android:textColor="@color/main_text"
                    android:text="登录/注册"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


        <!--已经登录用户信息-->
        <RelativeLayout
            android:id="@+id/rl_user_info_has_login"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <!--用户头像-->
            <com.elk.base.widget.CircleImageView
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_centerVertical="true"
                android:id="@+id/iv_user_head_icon"
                android:src="@drawable/icon_head_load_fail"
                android:layout_height="@dimen/mine_header_width"
                android:layout_width="@dimen/mine_header_height"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_user_head_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_mine_user_name"
                    android:text="用户名"
                    android:textSize="16sp"
                    android:textColor="@color/main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_mine_user_label"
                    android:visibility="gone"
                    android:layout_below="@id/tv_mine_user_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="10sp"
                    android:text="普通用户"
                    android:textColor="@color/hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>

            <ImageView
                android:id="@+id/img_mine_setup"
                android:padding="@dimen/margin_15"
                android:src="@drawable/mine_setup"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


        <View
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:background="#ffecf0f1"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.elk.base.widget.MineMeneItemView
                android:id="@+id/mine_income"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/mine_item"
                elk:menutext="我的收益"
                elk:menuIcon="@drawable/my_walleta"
                />
            <TextView
                android:id="@+id/tv_mine_user_unsettledMoney"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:textSize="24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <com.elk.base.widget.MineMeneItemView
            android:id="@+id/mine_guide_orders"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/mine_item"
            elk:menutext="向导订单"
            elk:menuIcon="@drawable/guide_order_a"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:background="#ffecf0f1"/>
        <com.elk.base.widget.MineMeneItemView
            android:id="@+id/mine_travel_note"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/mine_item"
            elk:menutext="旅行志"
            elk:menuIcon="@drawable/my_travela"
            />
        <com.elk.base.widget.MineMeneItemView
            android:id="@+id/mine_spitslot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/mine_item"
            elk:menutext="吐槽"
            elk:menuIcon="@drawable/my_tucaoa"
            />
        <com.elk.base.widget.MineMeneItemView
            android:id="@+id/mine_wen_wen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/mine_item"
            elk:menutext="我的问问"
            elk:menuIcon="@drawable/my_aska"
            />
        <com.elk.base.widget.MineMeneItemView
            android:id="@+id/mine_diary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/mine_item"
            elk:menutext="我的游记"
            elk:menuIcon="@drawable/my_travelsa"
            />
        <com.elk.base.widget.MineMeneItemView
            android:id="@+id/mine_collection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/mine_item"
            elk:menutext="我的收藏"
            elk:menuIcon="@drawable/my_collectiona"
            />
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
<RelativeLayout
    android:id="@+id/rl_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >


        <ImageButton
            android:id="@+id/iv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/closea"/>


    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="麋鹿旅行"
            android:textColor="@color/main_text"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="陪你逛世界"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            />
    </LinearLayout>


    <!--<View-->
    <!--android:layout_width="140dp"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/white"-->
    <!--/>-->


    <!--登录输入框start-->
    <LinearLayout
        android:id="@+id/login_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="210dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/login_iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iphone_4a"
                />

            <EditText
                android:id="@+id/login_et_userid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/main_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/login_iv_clearid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/closea"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/money_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/login_iv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/locka"
                />

            <EditText
                android:id="@+id/login_et_paw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/main_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/login_iv_clearpaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/closea"
                />
        </LinearLayout>
    </LinearLayout>
    <!--登录输入框end-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="335dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_btn_login"
            android:layout_gravity="center_horizontal"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_round_20dp_red_bg"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />
        <RelativeLayout
            android:id="@+id/rl_login_from_third"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_login_from_third"
                android:layout_centerInParent="true"
                android:textColor="@color/minor_text"
                android:textSize="14sp"
                android:text="使用第三方登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_text"/>
            <View
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/tv_login_from_third"
                android:background="@color/hint_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/login_from_wexin"
            android:layout_gravity="center_horizontal"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/selector_round_transparent_bg"
            >
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text"
                android:textSize="15sp"
                android:drawableLeft="@drawable/micro_letter_a"
                android:text="微信登录"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:text="去注册"
                android:textColor="@color/main_text"
                android:textSize="12sp"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/login_tv_forgetpaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@id/tv_register"
                android:text="忘记密码?"
                android:textColor="@color/main_text"
                android:textSize="12sp"
                android:visibility="visible"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>